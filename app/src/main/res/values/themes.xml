<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Selection" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->

    </style>

    <style name="Theme.Selection" parent="Base.Theme.Selection">
        <item name="colorPrimary">@color/black</item>
    </style>



    <style name="Theme.App.Starting" parent="Theme.SplashScreen">
        // Set the splash screen background, animated icon, and animation duration.
        <item name="windowSplashScreenBackground">@color/main_color</item>

        // Use windowSplashScreenAnimatedIcon to add either a drawable or an
        // animated drawable. One of these is required.
        <item name="windowSplashScreenAnimatedIcon">@drawable/selection_logo</item>
        <item name="windowSplashScreenAnimationDuration">300</item>  # Required for
        # animated icons

        // Set the theme of the Activity that directly follows your splash screen.
        <item name="postSplashScreenTheme">@style/Theme.Selection</item>  # Required.
    </style>

    <style name="NumberPickerTheme" parent="Theme.Selection">
        <!-- NumberPicker divider color -->
        <item name="colorControlNormal">#00000000</item>
    </style>

    <style name="NewDialogStyle" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorAccent">@color/main_color</item>
        <item name="android:windowMinWidthMinor">100%</item>
        <item name="android:windowTitleStyle">@style/DialogTitleStyle</item>
        <item name="android:windowIsFloating">true</item>
    </style>

    <style name="DialogTitleStyle" parent="TextAppearance.AppCompat.Title">
        <item name="android:textColor">@android:color/transparent</item>
    </style>

</resources>